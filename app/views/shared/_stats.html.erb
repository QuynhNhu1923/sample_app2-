<% @user ||= current_user %>
<div class="stats">
  <a href="<%= following_user_path(@user) %>">
    <strong id=t(".following") class="stat">
      <%= @user.following.count %>
    </strong><%= t(".following") %></a>
  <a href="<%= followers_user_path(@user) %>">
    <strong id=t(".followers") class="stat">
      <%= @user.followers.count %>
    </strong><%= t(".followers") %></a>
</div>
