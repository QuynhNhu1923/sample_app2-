<%# app/views/users/show.html.erb %>
<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
      <p>
        <strong><%= t(".email") %>:</strong> <%= @user.email %>
      </p>
      <p>
        <strong><%= t(".create_at") %>:</strong> <%= l(@user.created_at) %>
      </p>
      <p>
        <strong><%= t(".update_at") %>:</strong> <%= l(@user.updated_at) %>
      </p>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @user.microposts.any? %>
      <h3>Microposts (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
      <%= raw pagy_bootstrap_nav(@page) %>
    <% end %>
  </div>
</div>
